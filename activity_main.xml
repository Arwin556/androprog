<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gbr1" />

        <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="100dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="36sp"
                android:text="Kami Mengundang Anda untuk menghadiri pernikahan:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="100dp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="30sp"
                android:text="Rapunzel and Flynn"
                android:layout_below="@id/tv1"
                android:layout_marginTop="-185dp"/>

        <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_below="@id/tv2"
                android:src="@drawable/gbr2" tools:layout_editor_absoluteY="305dp" tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="-104dp"/>



</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>